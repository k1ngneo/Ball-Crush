SettingsScreen:

<GameScreen>:
    name: 'game'

<MenuScreen>:
    name: 'menu'
    canvas.before:
        Color:
            rgba: (0, 0.78, 0.71, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    scene_widget: scene_widget
    FloatLayout:
        id: scene_widget
    FloatLayout:
        Image:
            source: 'assets/images/game_logo.png'
            pos_hint: {'center_y': 0.75, 'center_x': 0.5}
            size: self.parent.size
        TapButton:
            size_hint: 1, .35
            color: 0.1, 0.1, 0.1, 1
            background_color: 0, 0, 0, 0
            pos_hint: {'center_y': 0.4, 'center_x': 0.5}
            text: 'Tap to play'
            on_press:
                root.play_click_sound()
                root.manager.current = 'game'
            canvas.before:
                PushMatrix:
                Scale:
                    origin: self.x + 0.5*self.width, self.y + 0.5*self.height
                    x: self.scale
                    y: self.scale

            canvas.after:
                PopMatrix:
        SettingsButton:
            size_hint: .15, .12
            pos_hint: {'center_y': 0.10, 'center_x': 0.15}
            background_color: 1, 1, 1, 0
            on_press:
                root.play_click_sound()
                root.manager.current = 'settings'
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    origin: self.center
            canvas.after:
                PopMatrix
            Image:
                source: 'assets/images/settings_cog.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: self.parent.size

        Label:
            id: best_score_label
            pos_hint: {'center_y': 0.3, 'center_x': 0.5}
            text: f'Best score: {int(root.score)}'
            color: 0.1, 0.1, 0.1, 1
            font_size: "20sp"


<GameScreen>:
    name: 'game'
    canvas.before:
        Color:
            rgba: (0, 0.78, 0.71, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    scene_widget: scene_widget
    FloatLayout:
        id: scene_widget

    FloatLayout:
        Label:
            id: score
            pos_hint: {'center_y': 0.75, 'center_x': 0.5}
            color: 0.1, 0.1, 0.1, 1
            font_size: "24sp"

<SummaryScreen>:
    name: 'summary'
    canvas.before:
        Color:
            rgba: (0, 0.78, 0.71, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        id: grid
        cols: 1
        size_hint: 0.5, 0.5
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        col_default_width: 1.0
        row_default_height: 0.33

        Label:
            text: 'Game Over'
            color: 0.1, 0.1, 0.1, 1
            font_size: "32sp"
            size_hint_y: 0.3
        Label:
            id: sc
            color: 0.1, 0.1, 0.1, 1
            font_size: "24sp"
            size_hint_y: 0.3
