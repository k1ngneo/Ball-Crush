GameScreen:

<GameScreen>:

<HoverButton>:
    size_hint: .4, .09
    font_size: "18sp"
    background_color: 1, 1, 1, 0
    color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgb: self.background
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [30]

<MenuScreen>:
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            pos_hint: {'center_y': 0.75, 'center_x': 0.5}
            text: "BALL CRUSH"
            color: 0, 0, 0, 1
            font_size: "40sp"
        TapButton:
            size_hint: 1, .35
            color: 0, 0, 0, 1
            background_color: 0, 0, 0, 0
            pos_hint: {'center_y': 0.4, 'center_x': 0.5}
            text: 'Tap to play'
            on_press: root.manager.current = 'game'
        Button:
            size_hint: .15, .12
            pos_hint: {'center_y': 0.15, 'center_x': 0.15}
            on_press: root.manager.current = 'settings'
            background_color: 0, 0, 0, 0

<SettingsScreen>:
    BoxLayout:
        HoverButton:
            text: 'My settings button'
        HoverButton:
            text: 'Back to menu'
            on_press: root.manager.current = 'menu'